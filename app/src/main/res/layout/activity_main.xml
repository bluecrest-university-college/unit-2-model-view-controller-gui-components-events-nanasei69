<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Red"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
           />

        <TextView
            android:id="@+id/vred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R:"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="225"
            android:progress="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tgreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Green"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
            />

        <TextView
            android:id="@+id/vgreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G:"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="225"
            android:progress="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blue"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
            />

        <TextView
            android:id="@+id/vblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B:"
            android:layout_margin="5sp"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="cursive"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="225"
            android:progress="1" />


    </LinearLayout>

    <TextView
        android:id="@+id/hex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hexadecimal"
        android:layout_margin="5sp"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="cursive"
        />

    <TextView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:text="color"
        android:gravity="center"
        android:textSize="65sp"
        android:background="#cccccc"/>

</LinearLayout>